<!DOCTYPE html>
<% provide(:title,'Posts')%>


<div class="formularios" id="tablas">
<h1>Tabla de Posts</h1>

    <% @posts.each do |post| %>
        <div class="post">
            <div class="header">
                <h4><%=  post.user.name %></h4>
            </div>
            <div class="body">
                <p class="card-text"><%= post.content %></p>
                <em class="exp">Expira el <%=  post.expiration %></em>
            </div> 
        </div>

    <% end %>
    
</div>